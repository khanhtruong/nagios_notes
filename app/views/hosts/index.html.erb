<% @hosts.each do |host| %>
  <tr>
    <td style="width: 200px;"><%= host.hostname %></td>
    <td style="width: 150px;"><%= host.ip %></td>
    <td style="width: 400px;"size="300"><%= host.notes %></td>
    <td><%= link_to 'Show', host %></td>
    <td><%= link_to 'Edit', edit_host_path(host) %></td>
    <td><%= link_to 'Destroy', host, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

