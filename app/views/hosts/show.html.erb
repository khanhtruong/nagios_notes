<p id="notice"><%= notice %></p>

<p>
  <b>Hostname:</b>
  <%= @host.hostname %>
</p>

<p>
  <b>Ip:</b>
  <%= @host.ip %>
</p>

<p>
  <b>Notes:</b>
  <%= @host.notes %>
</p>

<h2>Services</h2>
<% @host.services.each do |service| %>
  <p>
    <b>Service check:</b>
    <%= service.service_check %>
    <%= link_to 'Edit', edit_host_service_path(@host, service) %> 
  </p>
 
  <p>
    <b>notes:</b>
    <%= simple_format(service.notes) %>
  </p>
<% end %>

<h2>Add a service:</h2>
<%= form_for([@host, @host.services.build]) do |f| %>
  <div class="field">
    <%= f.label :service_check %><br />
    <%= f.text_field :service_check %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_host_path(@host) %> |
<%= link_to 'Back', hosts_path %>
